<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kids_remember"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="clean6265.com.naver.blog.login.KidsRememberActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mTextQuest"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:layout_weight="0.28" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/mTextQuest"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:layout_height="250dp">

            <VideoView
                android:layout_width="match_parent"
                android:id="@+id/videoViewData"
                android:layout_above="@+id/mTextAnswer"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="37dp"

                android:layout_height="250dp" />

            <WebView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imageViewData"
                android:layout_gravity="center_vertical|center_horizontal"
                android:scrollbars="none"
                android:clickable="true"
                android:focusable="true"
                />


        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonSubmit"
            android:layout_alignParentStart="true"
            android:layout_weight="0.19">

            <TextView
                android:layout_height="wrap_content"
                android:text="정답 : "
                android:id="@+id/AnswerTV"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/mTextAnswer"
                android:layout_weight="1.02"
                android:layout_width="20dp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/mTextAnswer2"
                android:layout_above="@+id/buttonSubmit"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_width="250dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonSubmit"
            android:layout_alignParentStart="true"
            android:layout_weight="0.19">

            <TextView
                android:layout_height="wrap_content"
                android:text="힌트 :"
                android:id="@+id/HintTV"
                android:layout_alignParentStart="true"
                android:layout_width="20dp"
                android:layout_above="@+id/mTextAnswer"
                android:layout_weight="1" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/mTextAnswer1"
                android:layout_above="@+id/buttonSubmit"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:text="뒤로가기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubmit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            />
    </LinearLayout>


</RelativeLayout>