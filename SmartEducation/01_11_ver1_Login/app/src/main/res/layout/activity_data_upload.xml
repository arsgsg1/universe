<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="clean6265.com.naver.blog.login.DataUploadActivity">

    <TextView
        android:text="업로드 할 자료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="탐색하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSearch"
        android:layout_marginLeft="14dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView6" />


    <Button
        android:text="저장하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSaveData"
        android:layout_marginLeft="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/buttonList"
        android:layout_marginEnd="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonList"
        android:text="목록"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextData"
        android:hint="이곳을 클릭하여 파일을 선택해주세요."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextQuest"
        android:hint="문제를 입력해주세요."
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/editTextAns"
        android:hint="정답을 입력해주세요."
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="정답"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextHint"
        android:hint="힌트를 입력해주세요."
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="문제"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/editTextData"
        android:hint=""
        android:layout_alignParentStart="true" />

    <TextView
        android:text="힌트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editTextAns"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="현재 선택된 비콘이 없습니다."
        android:id="@+id/textView7"
        android:gravity="bottom"
        android:layout_above="@+id/buttonSearch"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="우선순위"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/editTextPri" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPri"
        android:hint="우선순위를 입력해주세요."
        android:layout_alignBaseline="@+id/editTextAns"
        android:layout_alignBottom="@+id/editTextAns"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal"
        android:maxLength="1"/>

    <TextView
        android:text="0 : No Priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/editTextPri"
        android:id="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 ~ 9 : Priority"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:id="@+id/textView10" />


</RelativeLayout>